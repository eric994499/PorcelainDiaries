<p id="notice"><%= notice %></p>

<p>
  <h3><strong>Title:</strong>
  <%= @post.title %></h3>
</p>
<p>
  <strong>By: </strong><%= @post.user.username %>
</p>
<% if @post.content != '' %>
<p>  
  <%= @post.content %>
</p>
<% end %>
<% if @post.images.attached? %>
<p>
	<strong>Images:</strong>
	<br>
	<% @post.images.each do |image| %>
	 <%= image_tag(image) %>
	<% end %>
</p>
<% end %>
<br>
         <%= link_to @post do %>
          <span class="icon" style="color:grey;"><i class="fa fa-eye" ></i>  0 | </span> 
         <% end %>         
         <%= link_to @post do %>
          <span class="icon" style="color:grey;"><i class="fa fa-heart"></i> 0</span>          
         <% end %>
<br>
<%= date_look(@post.created_at) %>
<br>
<% if @post.user == current_user %>
 <%= link_to 'Delete', post_path, method: :delete, style: "color: red;", data: { confirm: "Are you sure you want to delete this post?"} %> |
 <%= link_to 'Edit', edit_post_path(@post) %> | 
<% end %>
<%= link_to 'Back', posts_path %>

<section class="comments">
  <h4><%= pluralize(@post.comments.count, 'Comment') %></h4>
  <%= render @post.comments %>
  <br>
</section>
  <% if user_signed_in? %>
   <div class="comment-form">
     <h4><small>Leave a reply</small></h4>
     <%= render 'partials/form'%>     
   </div>
  <% else %>
   <div class="content">
    <%= link_to 'Sign in', new_user_session_path %> to leave a comment!
   </div>
   <% end %>


<br>

