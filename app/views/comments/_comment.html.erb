<div class="container">
 <% if comment.user.avatar.attached? %>
            
            <%= image_tag comment.user.avatar.variant(resize: "25x25")%>
            <b><%=  comment.user.username %></b> 
            <% else %>
            
             <b><%=  comment.user.username %></b> 
             <% end %>
 <br>
 <%= comment.response %>
 <br>
 <% if(user_signed_in? && (current_user.id == comment.user_id)) %>
  <%= link_to 'Delete', [comment.post, comment], method: :delete, style: "color: red;", data: {confirm: "are you sure you want to delete this comment"} %>
 <% end %>
 <br>
</div>
